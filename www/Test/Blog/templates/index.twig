{% extends 'base.twig' %}

{% block body %}
<div class="container">
    <h3 class="mb-3 mt-3">Latest Posts</h3>
    <div class="row">
        <div class="col-md-9">
            {% for post in posts %}
                <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
                    <div class="p-3">
                        {% if post.image_path is not null %}
                            <img class="card-img-top" src="{{ post.image_path }}" alt="{{ post.title|escape }}">
                        {% endif %}
                        <div class="mt-3">
                            <a href="/Test/Blog/{{ post.url_key }}"><h5 class="card-title">{{ post.title }}</h5></a>
                            <span class="text-muted">Evgeniy Shakhov | {{ post.published_date|date("F d, Y") }}</span>
                            <p class="mt-2">{{ post.description|escape }}</p>
                            <a href="/Test/Blog/{{ post.url_key }}" class="btn btn-primary">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <a href="/Test/Blog/blog">View all</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="container">
                <h4>About</h4>
                <p>Hello, I am a ghost!</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}