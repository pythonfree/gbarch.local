{% extends 'base.twig' %}

{% block body %}
<div class="container">
    <h1 class="mb-3 mt-3">Welcome to my Blog</h1>
    {% set rowCount = 1 %}
    {% for post in posts %}
        {% if rowCount == 1 %}
            <div class="container row">
        {% endif %}
            <div class="p-1">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="https://dummyimage.com/300x200/133e94/fff" alt="{{ post.title|escape }}">
                    <div class="card-body">
                        <a href="/Test/Blog/{{ post.url_key }}"><h5 class="card-title">{{ post.title }}</h5></a>
                        <p class="card-text">{{ post.description|escape }}</p>
                        <a href="/Test/Blog/{{ post.url_key }}" class="btn btn-primary">Read more</a>
                    </div>
                </div>
            </div>
        {% set rowCount = rowCount + 1 %}
        {% if rowCount == 1 %}
            </div>
        {% endif %}
        {% if rowCount > 3 %}
            {% set rowCount = 1 %}
        {% endif %}
    {% endfor %}
</div>
{% endblock %}