{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        <img class="img-fluid" src="https://dummyimage.com/1200x400/133e94/fff" alt="Card image cap">
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted">Evgeniy Shakhov | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}