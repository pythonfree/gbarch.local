{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
        <div class="p-3">
            {% if post.image_path is not null %}
                <img class="card-img-top" src="{{ asset_url(post.image_path) }}" alt="{{ post.title|escape }}">
            {% endif %}
            <div class="mt-3">
                <a href="{{ url(post.url_key) }}"><h5 class="card-title">{{ post.title }}</h5></a>
                <span class="text-muted">Evgeniy Shakhov | {{ post.published_date|date("F d, Y") }}</span>
                <p class="mt-2">{{ post.description|escape }}</p>
                <a href="{{ url(post.url_key) }}" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}